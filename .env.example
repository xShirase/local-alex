# MCP Agent Server - Environment Variables
# Copy this file to .env and fill in your values

# n8n Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password
N8N_ENCRYPTION_KEY=your_encryption_key

# ChromaDB Configuration
CHROMA_API_KEY=your_chroma_api_key

# LLM Service Selection (local or remote)
DEFAULT_LLM_PROVIDER=ollama
DEFAULT_LOCAL_MODEL=mistral
DEFAULT_REMOTE_MODEL=gpt-4-turbo

# OpenAI API (Optional, for fallback to remote models)
# OPENAI_API_KEY=your_openai_key

# User and Context Settings
DEFAULT_USER_ID=default
DEFAULT_CONTEXT=personal

# Whisper Configuration (Optional)
# WHISPER_MODEL=base

# Agent API Configuration
PORT=3000
LOG_LEVEL=debug

# Vault Configuration (Optional)
# VAULT_DEV_ROOT_TOKEN_ID=dev_only_token 

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
